<test.com.androidtemplates.util.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <test.com.androidtemplates.util.CustomLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">


        <RelativeLayout
            android:id="@+id/center_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <test.com.androidtemplates.util.CustomLayout
                android:id="@+id/ceneter_top_background"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/ceneter_top"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />


            </test.com.androidtemplates.util.CustomLayout>

            <test.com.androidtemplates.util.CustomLayout
                android:id="@+id/ceneter_bottom_background"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/ceneter_top_background"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/ceneter_bottom"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

            </test.com.androidtemplates.util.CustomLayout>

        </RelativeLayout>


        <ImageView
            android:id="@+id/top_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/center_layout"
            android:layout_toLeftOf="@+id/center_layout"
            android:layout_toStartOf="@+id/center_layout" />

        <ImageView
            android:id="@+id/top_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/center_layout"
            android:layout_toEndOf="@+id/center_layout"
            android:layout_toRightOf="@+id/center_layout" />

        <ImageView
            android:id="@+id/bottom_left"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/center_layout"
            android:layout_toLeftOf="@+id/center_layout"
            android:layout_toStartOf="@+id/center_layout" />

        <ImageView
            android:id="@+id/bottom_right"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/center_layout"
            android:layout_toEndOf="@+id/center_layout"
            android:layout_toRightOf="@+id/center_layout" />


        <ImageView
            android:id="@+id/button_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3sp"
            android:layout_marginTop="5sp"
            android:src="@drawable/close_button" />

    </test.com.androidtemplates.util.CustomLayout>

</test.com.androidtemplates.util.CustomLayout>